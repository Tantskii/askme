<!DOCTYPE html>
<html>
<head>
  <title>Хорошие вопросы</title>
  <meta charset="UTF-8">
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>

<body>
<div class="header">
  <div class="header-logo">
    <h1 class="header=title"><%= link_to "Хорошие вопросы", root_path %></h1>
  </div>

  <div class="header-nav">
    <% if current_user %>
        <%= link_to "@#{current_user.username}", user_path(current_user) %>
        <%= link_to 'выйти', log_out_path %>
        <%= link_to 'удалить профиль', user_path(current_user), method: :delete,
                    data: {confirm: 'Точно хотите удалить профиль?'} %>
    <% else %>
        <%= link_to 'Зарегистрироваться', sign_up_path, class: 'button button-light button-small' %>
        <%= link_to 'Войти', log_in_path, class: 'button button-light button-small' %>
    <% end %>
  </div>
</div>


<div class="content">
  <div class="container">
    <% if flash.any? %>
        <div class="content-wrapper buffer-both">
          <% flash.each do |name, message| %>
              <%= content_tag :div, message, class: "flash-#{name}" %>
          <% end %>
        </div>
    <% end %>

    <%= yield %>
  </div>
</div>
</body>
</html>
