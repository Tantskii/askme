<div class="content-wrapper buffer-both text-center">
  <div class="buffer-both">
    <h1 class="title-medium">Наши пользователи</h1>
  </div>

  <% @users.each do |user| %>
      <div class="users-list-item">
        <div class="user-image-div user-image-div-small">
          <%= link_to image_tag(user_avatar(user), class: 'user-image'), user_path(user) %>
        </div>
      </div>
  <% end %>
</div>

<div class="column-main">
  <div class="content-wrapper clearfix">
    <h1 class="title-medium">Хэштеги</h1>

    <div class="column-1-3 ">
      <div class="question">
        <div class="questions-list">
          <% @hashtags_first.each do |hashtag| %>
              <%= render partial: 'hashtags/hashtag', object: hashtag %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="column-1-3">
      <div class="question">
        <div class="questions-list">
          <% @hashtags_second.each do |hashtag| %>
              <%= render partial: 'hashtags/hashtag', object: hashtag %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="column-1-3">
      <div class="question">
        <div class="questions-list">
          <% @hashtags_third.each do |hashtag| %>
              <%= render partial: 'hashtags/hashtag', object: hashtag %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


